{
	"name": "zenn-editor",
	"displayName": "Zenn Editor",
	"description": "An unofficial extension integrates Zenn CLI into VS Code",
	"version": "0.0.1",
	"publisher": "negokaz",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
    "keywords": [
        "Markdown"
    ],
    "icon": "docs/images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/negokaz/vscode-zenn-editor.git"
	},
    "bugs": {
        "url": "https://github.com/negokaz/vscode-zenn-editor/issues"
    },
    "homepage": "https://github.com/negokaz/vscode-zenn-editor",
	"activationEvents": [
		"onCommand:zenn-editor.preview"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zenn-editor.preview",
				"title": "Zenn Editor: Open Preview",
				"icon": {
					"light": "./media/icon/preview-light.svg",
					"dark": "./media/icon/preview-dark.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "zenn-editor.preview",
					"when": "editorLangId == markdown"
				}
			],
			"editor/title": [
				{
					"command": "zenn-editor.preview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "zenn-editor.preview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/http-proxy": "^1.17.5",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/ps-tree": "^1.1.0",
		"@types/vscode": "^1.52.0",
		"@types/which": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"css-loader": "^5.0.2",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"style-loader": "^2.0.0",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vsce": "^1.85.0",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0",
		"zenn-cli": "^0.1.72"
	},
	"dependencies": {
		"get-port": "^5.1.1",
		"http-proxy": "^1.18.1",
		"path-array": "^1.0.1",
		"ps-tree": "^1.2.0",
		"which": "^2.0.2"
	}
}
